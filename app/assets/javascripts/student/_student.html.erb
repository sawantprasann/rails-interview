<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body" ng-if="student.isLoading">
          <h1>Loading students <i class="fa-li fa fa-spinner fa-spin"></i></h1>
        </div>
        <div class="panel-body" ng-if="!student.isLoading && student.hasError">Something wrong has happened somewhere D:</div>
        <div class="panel-body" ng-if="!student.isLoading && !student.hasError">
          <h1>Listing students</h1>
          <form>
            <div class="form-group">
              <label for="search">Filter students</label>
              <input type="text" name="search" id="search" placeholder="Name, last name or anything" class="form-control" ng-model="student.search">
            </div>
          </form>
          <table class="table table-striped">
            <tr>
              <th>
                <a href="#" ng-click="student.setSort('name')">
                  Name
                  <span ng-show="student.isSortedBy('name')" ng-class="{'fa-caret-down': !student.sortReverse, 'fa-caret-up': student.sortReverse}" class="fa"></span>
                </a>
              </th>
              <th>
                <a href="#" ng-click="student.setSort('lastname')">
                  Last Name
                  <span ng-show="student.isSortedBy('lastname')" ng-class="{'fa-caret-down': !student.sortReverse, 'fa-caret-up': student.sortReverse}" class="fa"></span>
                </a>
              </th>
              <th>
                <a href="#" ng-click="student.setSort('favoritemovie')">
                  Favorite Movie
                  <span ng-show="student.isSortedBy('favoritemovie')" ng-class="{'fa-caret-down': !student.sortReverse, 'fa-caret-up': student.sortReverse}" class="fa"></span>
                </a>
              </th>
              <th>
                <a href="#" ng-click="student.setSort('favoritefood')">
                  Favorite Food
                  <span ng-show="student.isSortedBy('favoritefood')" ng-class="{'fa-caret-down': !student.sortReverse, 'fa-caret-up': student.sortReverse}" class="fa"></span>
                </a>
              </th>
              <th>
                <a href="#" ng-click="student.setSort('favoritecolor')">
                  Favorite Color
                  <span ng-show="student.isSortedBy('favoritecolor')" ng-class="{'fa-caret-down': !student.sortReverse, 'fa-caret-up': student.sortReverse}" class="fa"></span>
                </a>
              </th>
            </tr>

            <tr ng-repeat="student in student.students | filter:student.search |Â orderBy:student.sortType:student.sortReverse">
              <td>{{ student.name }}</td>
              <td>{{ student.lastname }}</td>
              <td>{{ student.favoritemovie }}</td>
              <td>{{ student.favoritefood }}</td>
              <td>{{ student.favoritecolor }}</td>
            </tr>
          </table>
        </div>
        <div class="panel-footer">
          <h1>Foo POST test</h1>
          <form method="POST" action="  foo">
            <div class="checkbox">
              <label>
                <input type="checkbox" name="valid" value="true">
                Send valid param
              </label>
            </div>
            <button type="submit" class="btn btn-default">Try Foo</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>